<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/activity_game_process_answer_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    
    <EditText
        android:id="@+id/activity_game_process_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="10">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/activity_game_process_button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_game_process_button_ok" />
	
	

</LinearLayout>
